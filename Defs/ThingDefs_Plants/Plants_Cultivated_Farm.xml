<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="TreeBase">
        <defName>Plant_TreeAvocado</defName>
        <label>avocado tree</label>
        <description>A tropical tree that produces avocado, genetically engineered to sweeten its own product, and
            survive in slightly less-warm climates.
        </description>
        <graphicData>
            <texPath>Things/Plant/TreeAvocado</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.15, 0.3, 0.15)</volume>
                <offset>(0,0,-0.38)</offset>
            </shadowData>
        </graphicData>
        <selectable>true</selectable>
        <statBases>
            <Beauty>2</Beauty>
            <Nutrition>1.25</Nutrition>
        </statBases>
        <ingestible/>
        <plant>
            <dieIfLeafless>true</dieIfLeafless>
            <growDays>8</growDays>
            <visualSizeRange>
                <min>0.8</min>
                <max>2.0</max>
            </visualSizeRange>
            <sowMinSkill>6</sowMinSkill>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <topWindExposure>0.15</topWindExposure>
            <mustBeWildToSow>false</mustBeWildToSow>
            <immatureGraphicPath>Things/Plant/TreeAvocado_Immature</immatureGraphicPath>
            <harvestWork>200</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestYield>50</harvestYield>
            <harvestedThingDef>RawAvocado</harvestedThingDef>
            <harvestFailable>true</harvestFailable>
        </plant>
    </ThingDef>
</Defs>