<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef ParentName="CookMealBase">
        <defName>MakeFrapp</defName>
        <label>make frappuccino</label>
        <description>Orange mocha frappuccinos!!</description>
        <jobString>Making frappucinos.</jobString>
        <workSpeedStat>CookSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <allowMixingIngredients>True</allowMixingIngredients>
        <workAmount>400</workAmount>
        <recipeUsers>
            <li>EspressoMachine</li>
        </recipeUsers>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Milk</li>
                <li>SyrRawCoffee</li>
            </thingDefs>
        </fixedIngredientFilter>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Milk</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SyrRawCoffee</li>
                    </thingDefs>
                </filter>
                <count>4</count>
            </li>
        </ingredients>
        <products>
            <Frappuccino>5</Frappuccino>
        </products>
        <skillRequirements>
            <Cooking>4</Cooking>
        </skillRequirements>
    </RecipeDef>

    <RecipeDef ParentName="CookMealBase">
        <defName>MakePopcorn</defName>
        <label>pop corn</label>
        <description>Makes for a delicious sweet or savoury snack, ideal for eating whilst watching television. Quick to make.</description>
        <jobString>Popping corn.</jobString>
        <workSpeedStat>CookSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <allowMixingIngredients>True</allowMixingIngredients>
        <workAmount>40</workAmount>
        <recipeUsers>
            <li>ElectricStove</li>
            <li>FueledStove</li>
            <li>Microwave</li>
        </recipeUsers>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Corn</li>
            </thingDefs>
        </fixedIngredientFilter>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Corn</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <products>
            <Popcorn>1</Popcorn>
        </products>
        <skillRequirements>
            <Cooking>3</Cooking>
        </skillRequirements>
    </RecipeDef>

    <RecipeDef ParentName="CookMealBase">
        <defName>MakeMicrowaveDinner</defName>
        <label>make microwave dinner</label>
        <description>Quickly throw together ingredients to make a below-par meal.</description>
        <jobString>Microwaving.</jobString>
        <workSpeedStat>CookSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <allowMixingIngredients>True</allowMixingIngredients>
        <workAmount>100</workAmount>
        <recipeUsers>
            <li>Microwave</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>FoodRaw</li>
                    </categories>
                </filter>
                <count>0.5</count>
            </li>
        </ingredients>
        <products>
            <MicrowaveDinner>1</MicrowaveDinner>
        </products>
        <workSkill>None</workSkill>
    </RecipeDef>
</Defs>